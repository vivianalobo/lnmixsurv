CXX_STD = CXX11

VER=-13.2
CC=gcc$(VER)
CXX= g++$(VER)

PKG_CXXFLAGS = `${R_HOME}/bin/Rscript -e "RcppGSL:::CFlags()"` -DARMA_64BIT_WORD=1 $(SHLIB_OPENMP_CXXFLAGS) -I../inst/include/ -I/usr/local/opt/llvm/include

PKG_LIBS = `${R_HOME}/bin/Rscript -e "RcppGSL:::LdFlags()"` $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) -L/usr/local/opt/llvm/lib

CXX_STD = CXX11

CC=gcc
CXX= g++

PKG_CXXFLAGS = `${R_HOME}/bin/Rscript -e "RcppGSL:::CFlags()"` -DARMA_64BIT_WORD=1 $(SHLIB_OPENMP_CXXFLAGS) -I../inst/include/ -Xpreprocessor -fopenmp

PKG_LIBS = `${R_HOME}/bin/Rscript -e "RcppGSL:::LdFlags()"` $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) -fopenmp

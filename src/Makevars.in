GSL_CFLAGS = @GSL_CFLAGS@
GSL_LIBS = @GSL_LIBS@

CC=/usr/bin/gcc
CXX=/usr/bin/g++
FC=/usr/bin/gfortran
F77=/usr/bin/gfortran

# combine with standard arguments for R
PKG_CPPFLAGS = $(GSL_CFLAGS) -DARMA_64BIT_WORD=1 $(SHLIB_OPENMP_CXXFLAGS) -I../inst/include/

PKG_LIBS = $(GSL_LIBS) $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)
